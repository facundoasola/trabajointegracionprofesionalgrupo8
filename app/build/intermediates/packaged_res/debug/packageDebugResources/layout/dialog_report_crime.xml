<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游늸 Direcci칩n del incidente"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/address_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Av. Corrientes 500, Buenos Aires"
            android:inputType="textPostalAddress"
            android:maxLines="2"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游늭 Categor칤a del delito"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游뚿 Tipo de incidente"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/subtype_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/severity_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gravedad: Se asignar치 autom치ticamente"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/incident_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripci칩n adicional del incidente (opcional)"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:minLines="2"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游 Hora aproximada"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/time_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Hace 2 horas, Ayer por la noche, etc."
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游닝 Imagen (Opcional)"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/select_image_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:drawablePadding="8dp"
            style="?android:attr/buttonStyleSmall"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/image_selected_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No se ha seleccionado imagen"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丘멆잺 Nota: Esta informaci칩n ser치 utilizada para mejorar la seguridad en la zona."
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</ScrollView>