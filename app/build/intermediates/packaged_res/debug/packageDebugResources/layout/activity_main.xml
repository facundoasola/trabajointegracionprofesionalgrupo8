<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- El mapa ocupa toda la pantalla, estÃ¡ al fondo de todo -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- BotÃ³n Flotante de MenÃº (Superior Izquierda) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_menu_24"
        app:backgroundTint="@android:color/white"
        app:tint="@android:color/black"
        app:fabSize="mini"/>

    <!-- BotÃ³n de Reportar Crimen (Superior Derecha) -->
    <Button
        android:id="@+id/report_crime_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:text="Reportar Crimen"
        android:drawableLeft="@drawable/ic_report_crime"
        android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- â˜…â˜…â˜… BOTONES DE ZOOM Y FILTROS DE CRIMEN â˜…â˜…â˜… -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="250dp"
        android:orientation="vertical">

        <!-- Filtro para crÃ­menes en vÃ­a pÃºblica -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/street_crime_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alert_warning"
            app:backgroundTint="#FF5722"
            app:fabSize="mini"
            app:tint="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- Filtro para robos de vehÃ­culos -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/vehicle_crime_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alert_warning"
            app:backgroundTint="#9C27B0"
            app:fabSize="mini"
            app:tint="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- Mostrar todas las zonas de peligro -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/danger_zones_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alert_warning"
            app:backgroundTint="#FF9800"
            app:fabSize="mini"
            app:tint="@android:color/white"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/zoom_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_zoom_in"
            app:backgroundTint="@android:color/white"
            app:fabSize="mini"
            app:tint="@android:color/black" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/zoom_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_zoom_out"
            app:backgroundTint="@android:color/white"
            app:fabSize="mini"
            app:tint="@android:color/black" />

    </LinearLayout>
    <!-- â˜…â˜…â˜… FIN DE LOS BOTONES DE ZOOM Y FILTRO â˜…â˜…â˜… -->


    <!-- Panel de BÃºsqueda (Inferior) -->
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_sheet_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿A dÃ³nde vas?"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/origin_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Punto de partida..."
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginBottom="8dp"/>



        <EditText
            android:id="@+id/destination_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destino..."
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/route_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trazar Rutas"
                android:backgroundTint="#2196F3"
                android:drawableLeft="@drawable/ic_destination_marker"
                android:drawablePadding="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/vehicle_route_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ruta en VehÃ­culo"
                android:backgroundTint="#4CAF50"
                android:drawableLeft="@drawable/ic_destination_marker"
                android:drawablePadding="8dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Panel de informaciÃ³n de las rutas -->
    <LinearLayout
        android:id="@+id/route_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_sheet_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Volver"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona tu ruta"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Ruta MÃ¡s Segura (Seleccionada por defecto) -->
        <LinearLayout
            android:id="@+id/safe_route_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:elevation="2dp"
            android:backgroundTint="#E3F2FD">

            <View
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:background="#2196F3"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›¡ï¸ Ruta mÃ¡s Segura (Recomendada)"
                    android:textColor="#1976D2"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/safe_route_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculando..."
                    android:textColor="#424242"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/radiobutton_on_background"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Ruta MÃ¡s RÃ¡pida -->
        <LinearLayout
            android:id="@+id/fast_route_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:background="#F44336"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Ruta mÃ¡s RÃ¡pida"
                    android:textColor="#D32F2F"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fast_route_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculando..."
                    android:textColor="#424242"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/fast_route_radio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/radiobutton_off_background"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

